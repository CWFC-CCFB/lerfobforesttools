%----- TITLE PAGE ----------
\newcommand\ps@title{%
  \addtolength{\textheight}{-6cm}%
  \addtolength{\topmargin}{2cm}%
  \setlength{\footskip}{1.5cm}%
  \renewcommand\@oddfoot{\parbox{\textwidth}{\it\scriptsize%
    \copyright{}XXXX %
      American Statistical Association and the International Biometric Society\\
      Journal of Agricultural, Biological and Environmental Statistics,
      Volume XX, Number X, Pages xx--xx\\
      DOI:~\newline\vspace*{2ex}}
      \hfil\normalfont\textrm{\thepage}\hfil}%
  \let\@evenfoot\@oddfoot
}

